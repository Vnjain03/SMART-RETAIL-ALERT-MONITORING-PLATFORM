# Common Configuration
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG=true

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_EVENTS=service-events
KAFKA_TOPIC_ALERTS=alert-events
KAFKA_TOPIC_METRICS=aggregated-metrics
KAFKA_CONSUMER_GROUP_ALERTS=alert-rules-engine
KAFKA_AUTO_OFFSET_RESET=earliest

# Azure Cosmos DB Configuration
COSMOS_DB_ENDPOINT=https://your-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-db-key-here
COSMOS_DB_DATABASE=smart_retail
COSMOS_DB_CONTAINER_EVENTS=events
COSMOS_DB_CONTAINER_ALERTS=alerts
COSMOS_DB_CONTAINER_RULES=rules
COSMOS_DB_CONTAINER_USERS=users

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_DAYS=7

# API Configuration
API_GATEWAY_PORT=8000
EVENT_INGESTION_PORT=8001
ALERT_RULES_ENGINE_PORT=8002
QUERY_ANALYTICS_PORT=8003
USER_MANAGEMENT_PORT=8004

# Service URLs (for inter-service communication)
EVENT_INGESTION_URL=http://localhost:8001
ALERT_RULES_ENGINE_URL=http://localhost:8002
QUERY_ANALYTICS_URL=http://localhost:8003
USER_MANAGEMENT_URL=http://localhost:8004

# OpenTelemetry / Jaeger Configuration
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
OTEL_SERVICE_NAME=smart-retail-platform
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Prometheus Configuration
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
